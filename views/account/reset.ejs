<div class="row">
  <div class="col-sm-8 col-sm-offset-2">
    <h1 class="page-header">Reset password</h1>
    <% include ../partials/flash %>
    <form method="post">
      <input type="hidden" name="_csrf" value="<%= _csrf %>">
      <div class="form-group">
        <p>
          Enter your email address below and we will send you password reset instructions.
        </p><label for="email" class="control-label">Email</label>
        <input type="email" name="email" id="email" placeholder="Email" autofocus="" class="form-control">
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Reset password</button>
      </div>
    </form>
  </div>
</div>